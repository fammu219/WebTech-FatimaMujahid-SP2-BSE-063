<!-- views/admin/editProduct.ejs -->
<style>
form {
    width: 100%;
    max-width: 500px;
    margin: 20px auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 8px;
    background-color: #f9f9f9;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-family: Arial, sans-serif;
}

/* Styling for each input field container */
form div {
    margin-bottom: 15px;
}

/* Label styling */
form label {
    display: block;
    margin-bottom: 5px;
    font-weight: bold;
    color: #333;
}

/* Input fields styling */
form input {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    color: #333;
    box-sizing: border-box;
}

form input:focus {
    border-color: #007BFF;
    outline: none;
    box-shadow: 0 0 4px rgba(0, 123, 255, 0.25);
}

/* Styling for the submit button */
form button {
    width: 100%;
    padding: 10px;
    background-color: #007BFF;
    border: none;
    border-radius: 4px;
    color: white;
    font-size: 16px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

form button:hover {
    background-color: #0056b3;
}

/* Styling for the cancel link */
div a {
    display: inline-block;
    margin-top: 10px;
    text-decoration: none;
    color: #007BFF;
    font-size: 16px;
    font-weight: bold;
    transition: color 0.3s ease;
}

div a:hover {
    color: #0056b3;
}

</style>
<h2>Edit Product</h2>

<form action="/admin/products/edit/<%= product._id %>" method="POST">
    <!-- Input for product name, pre-filled with current name -->
    <div>
        <label for="name">Product Name</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required>
    </div>
    
    <!-- Input for product price, pre-filled with current price -->
    <div>
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= product.price %>" required>
    </div>
    
    <!-- Input for product description, pre-filled with current description -->
    <div>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" required><%= product.description %></textarea>
    </div>
    
    <!-- Submit button to update the product -->
    <div>
        <button type="submit">Update Product</button>
    </div>
</form>



<!-- Optionally, add a cancel link to go back to the products list -->
<div>
    <a href="/admin/products">Cancel</a>
</div>


